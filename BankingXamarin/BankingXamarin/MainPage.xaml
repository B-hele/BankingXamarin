<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankingXamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#362A62" Padding="24" CornerRadius="0">
            <Image Source="" />
            <Label Text="OneBank" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>

        </Frame>
        
        <Entry x:Name="DepositAmountEntry" Placeholder="Deposit Amount" />
        <Entry x:Name="DepositReasonEntry" Placeholder="Deposit Reason"/>
        <Button x:Name="DepositButton" Text="Deposit" Clicked="DepositButton_Clicked"/>

</StackLayout>



</ContentPage>
